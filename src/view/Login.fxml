<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
          <Label fx:id="loginLabel" layoutX="218.0" layoutY="27.0" text="Login">
              <font>
                  <Font name="System Bold" size="24.0" />
              </font>
          </Label>
          <Label fx:id="usernameLabel" layoutX="96.0" layoutY="112.0" text="Username:">
              <font>
                  <Font name="System Bold" size="14.0" />
              </font>
          </Label>
          <Label fx:id="passwordLabel" layoutX="97.0" layoutY="155.0" text="Password:">
              <font>
                  <Font name="System Bold" size="14.0" />
              </font>
          </Label>
          <TextField fx:id="loginUsernameTextField" layoutX="216.0" layoutY="109.0" prefHeight="26.0" prefWidth="198.0" />
          <TextField fx:id="loginPasswordTextField" layoutX="216.0" layoutY="152.0" prefHeight="26.0" prefWidth="198.0" />
            <Button fx:id="loginExitButton" layoutX="219.0" layoutY="199.0" maxWidth="-Infinity" mnemonicParsing="false" onAction="#exit" prefWidth="90.0" text="Exit" />
            <Button fx:id="loginButton" layoutX="325.0" layoutY="199.0" maxWidth="-Infinity" mnemonicParsing="false" onAction="#login" prefWidth="90.0" text="Enter" />
          <Label fx:id="loginTimeZoneLabel" layoutX="26.0" layoutY="304.0" text="Time Zone" textFill="#0000007e">
              <font>
                  <Font name="System Bold Italic" size="14.0" />
              </font>
          </Label>
      <Label fx:id="warningText" layoutX="26.0" layoutY="275.0" text="* ENGLISH/FRENCH language supported">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
