<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerController">
    <children>
        <TableView fx:id="customerTableView" layoutX="24.0" layoutY="47.0" prefHeight="370.0" prefWidth="908.0">
            <columns>
                <TableColumn fx:id="customerIdColumn" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="customerNameColumn" prefWidth="140.0" text="Name" />
                <TableColumn fx:id="customerAddressColumn" prefWidth="140.0" text="Address" />
                <TableColumn fx:id="customerDivisionColumn" prefWidth="140.0" text="State/Province" />
                <TableColumn fx:id="customerCountryColumn" prefWidth="140.0" text="Country" />
                <TableColumn fx:id="customerPostalCodeColumn" prefWidth="140.0" text="Postal Code" />
                <TableColumn fx:id="customerPhoneNumberColumn" prefWidth="140.0" text="Phone Number" />
            </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" layoutX="50.0" layoutY="425.0" prefHeight="75.0" prefWidth="900.0" spacing="30.0">
            <children>
                <Button fx:id="customersMenuButton" maxWidth="-Infinity" mnemonicParsing="false" onAction="#mainMenu" prefHeight="26.0" prefWidth="116.0" text="Main Menu" />
                <Button fx:id="customersAddButton" maxWidth="-Infinity" mnemonicParsing="false" onAction="#customerAdd" prefHeight="26.0" prefWidth="98.0" text="Add" />
                <Button fx:id="customersUpdateButton" mnemonicParsing="false" onAction="#customerModifyButton" prefHeight="26.0" prefWidth="93.0" text="Update" />
                <Button fx:id="customersDeleteButton" maxWidth="-Infinity" mnemonicParsing="false" onAction="#customerDelete" prefHeight="26.0" prefWidth="101.0" text="Delete" />
            </children>
        </HBox>
          <Label layoutX="440.0" text="Customers">
              <font>
                  <Font name="System Bold" size="24.0" />
              </font>
          </Label>
    </children>
</AnchorPane>
